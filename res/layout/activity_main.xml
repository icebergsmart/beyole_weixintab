<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:beyole="http://schemas.android.com/apk/res/com.beyole.weixintab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/tabbg"
        android:orientation="horizontal" >

        <com.beyole.view.ChangeColorIconView
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            beyole:icon="@drawable/ic_menu_start_conversation"
            beyole:text="消息"
            beyole:textSize="12sp" />

        <com.beyole.view.ChangeColorIconView
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            beyole:icon="@drawable/ic_menu_friendslist"
            beyole:text="朋友"
            beyole:textSize="12sp" />

        <com.beyole.view.ChangeColorIconView
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            beyole:icon="@drawable/ic_menu_emoticons"
            beyole:text="功能"
            beyole:textSize="12sp" />

        <com.beyole.view.ChangeColorIconView
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            beyole:icon="@drawable/ic_menu_cc"
            beyole:text="设置"
            beyole:textSize="12sp" />
    </LinearLayout>

</LinearLayout>